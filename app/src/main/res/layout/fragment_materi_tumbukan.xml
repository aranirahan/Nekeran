<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_border"
            android:layout_height="wrap_content">

            <TextView
                android:text="Materi 4"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Tumbukan"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="16dp"
            android:src="@drawable/m4gambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.codesgood.views.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="Tumbukan lenting sempurna"
            android:layout_height="wrap_content"/>

        <com.codesgood.views.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:text="Animasi dua neker massa m1 dan m2 mula-mula bergerak dengan kecepatan v1 dan v2 yang arahnya berlawanan. Kedua benda bertumbukan secara langsung dan meninggalkan lokasi tumbukan dengan kecepatan masing-masing v1’ dan v2’."
            android:textColor="@color/red500"
            android:layout_height="wrap_content"/>

        <com.codesgood.views.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:text="Koefisien restitusi bernilai 1 Berlaku Hukum Kekekalan Momentum (p sebelum = p sesudah) dan Hukum Kekekalan Energi"
            android:layout_height="wrap_content"/>

        <com.codesgood.views.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:text="Tumbukan lenting sebagian"
            android:layout_height="wrap_content"/>

        <com.codesgood.views.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:text="Animasi permainan bola bekel. Saat bola bekel menyentuh lantai kemudian bola bekel memantul dan menghasilkan bunyi dari tumbukan antar lantai dan bola bekel"
            android:textColor="@color/red500"
            android:layout_height="wrap_content"/>

        <com.codesgood.views.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:text="@string/pada_tumbukan_lenting_sebagian_beberapa_energi_kinetik_akan_diubah_menjadi_energi_bentuk_lain_seperti_panas_bunyi_dan_sebagainya_akibatnya_energi_kinetik_sebelum_tumbukan_lebih_besar_daripada_energi_kinetik_sesudah_tumbukan_koefisien_restitusi_e_adalah_0_e_1_berlaku_hukum_kekekalan_momentum"
            android:layout_height="wrap_content"/>

        <com.codesgood.views.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:text="Tumbukan tidak lenting"
            android:layout_height="wrap_content"/>

        <com.codesgood.views.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:text="Animasi dua neker massa m1 dan m2 mula-mula bergerak dengan kecepatan v1 dan v2 yang arahnya berlawanan. Kedua benda bertumbukan secara langsung kemudian neker 1 dan neker 2 bergerak bersama-sama ke arah kanan dengan kecepatan."
            android:textColor="@color/red500"
            android:layout_height="wrap_content"/>

        <com.codesgood.views.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:text="Koefisien restitusi bernilai 0 Berlaku Hukum Kekekalan Momentum (Psebelum = Psesudah)"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/m4g2"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>