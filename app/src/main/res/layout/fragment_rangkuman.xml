<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:layout_margin="16dp"
        android:layout_height="wrap_content">
        <com.codesgood.views.JustifiedTextView
            android:text="Rangkuman"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_border"
            android:padding="8dp"
            android:layout_height="match_parent"/>
        <com.codesgood.views.JustifiedTextView
            android:text="1. Momentum adalah ukuran tingkat kesukaran menghentikan benda yang bergerak. Apabila benda bermassa m, bergerak dengan kecepatan v maka besar momentum benda dapat dihitung besar nilainya menggunakan rumus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_border"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="p = m v"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="dengan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="p = momentum benda (kg m/s)"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="m = massa benda (kg)"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="v = kecepatan benda (m/s)"/>
        </LinearLayout>
        <com.codesgood.views.JustifiedTextView
            android:text="2. Impuls adalah hasil kali gaya impulsif rata-rata (F) dan selang waktu singkat (∆t) selama gaya impulsif bekerja disebut besaran impuls dan diberi lambang I. Dengan demikian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_border"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="I = F ∆t = F (t₂ - t₁)"/>
            <com.codesgood.views.JustifiedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Keterangan :"/>
            <com.codesgood.views.JustifiedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text=" I = Impuls (N.s)"/>
            <com.codesgood.views.JustifiedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="F = Gaya (N)"/>
            <com.codesgood.views.JustifiedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:text="∆t = selang waktu"/>
        </LinearLayout>
        <com.codesgood.views.JustifiedTextView
            android:text="3. Teorema impuls dan momentum berbunyi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.codesgood.views.JustifiedTextView
            android:layout_gravity="center_horizontal"
            android:text="Impuls = perubahan momentum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_border"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="F ∆t = m  ∆v"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="F ∆t = m (v -  vc)"/>
        </LinearLayout>
        <com.codesgood.views.JustifiedTextView
            android:text="4. Hukum Kekekalan Momentum berbunyi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.codesgood.views.JustifiedTextView
            android:layout_gravity="center_horizontal"
            android:text="Total momentum sistem selalu tetap, maka momentum sistem sebelum dan sesudah terjadi tumbukan adalah sama. Oleh karena itu pada sistem di atas dapat dirumuskan persamaan sebagai berikut "
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_border"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/materi3rumus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>
            <ImageView
                android:src="@drawable/m3rumus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <com.codesgood.views.JustifiedTextView
            android:text="5.  Tumbukan melambangkan kejadian dimana dua partikel saling mendekat dan saling berinteraksi menggunakan gaya. Macam-macam tumbukan adalah tumbukan lenting sempurna, lenting sebagian dan tidak lenting sama seklai."
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</ScrollView>